@using GMCopilot.Entities.Models

<AuthorizeView>
    <Authorized>
        <MudSpacer />
        @if (AccessContext.IsLoaded)
        {
            <MudButton Variant="Variant.Filled">Manage @AccessContext.Account.Name | @AccessContext.Tenant.Name</MudButton>
        }
        else
        {
            <MudButton Variant="Variant.Filled">Loading account...</MudButton>
        }

        <MudButton Variant="Variant.Filled" Href="MicrosoftIdentity/Account/SignOut">Log out</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudSpacer />
        <MudButton Variant="Variant.Filled" Href="MicrosoftIdentity/Account/SignIn">Log in</MudButton>
    </NotAuthorized>
</AuthorizeView>

@code {
    [CascadingParameter]
    public AccessService? AccessContext { get; set; }
}
